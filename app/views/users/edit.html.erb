<div class="container">
   <% if @user.errors.any? %>
    <div class="error_explanation">
      <% if @user.errors.count >= 2 %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <% else %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <% end %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image, "Image" %><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update User', class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>