<div class="container">
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <% if @book.errors.count >= 2 %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <% else %>
        <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
      <% end %>
       <ul>
        <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="row">
    <div class="col-sm-12 col-md-8 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book , method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title" %><br>
        <%= f.text_field  :title %>
      </div>
      <div class="form-group">
        <%= f.label :body, "Opinion" %><br>
        <%= f.text_area  :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
